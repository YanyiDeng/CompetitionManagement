<div class="container">

  <h1 align="center">
    队伍管理
  </h1>

<table class="table table-striped table-bordered row mx-0">
  <thead class="w-100">
  <tr class="row mx-0">
    <th class="col-3">参加比赛</th>
    <th class="col-1">比赛届数</th>
    <th class="col-3">队伍名</th>
    <th class="col-1">队长</th>
    <th class="col-4">管理</th>
  </tr>
  </thead>

  <tbody class="w-100">
  <% @groups.each do |group| %>
    <tr class="row mx-0">
      <td class="col-3"><%= group.competition.name %></td>
      <td class="col-1"><%= group.competition.version %></td>
      <td class="col-3"><%= group.name %></td>
      <td class="col-1"><%= group.student.name %></td>
      <td class="col-4"><%= link_to '详情', group_path(group), class: "btn btn-primary" %>
      <%= link_to '添加指导老师', edit_group_path(group), class: "btn btn-success" %>
      <%= link_to '删除', group_path(group),
                      method: :delete,
                      data: { confirm: '确认删除?' }, class: "btn btn-danger" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
