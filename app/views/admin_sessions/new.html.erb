<div class="container">
  <h1 align="center" class="text-white">
    管理员登录
  </h1><br>

    <%= form_for :admin_session, url: admin_login_url, method: :post do |f| %>

    <% if flash[:notice] != nil %>
      <div class="row">
        <div class="col-md-4"></div>
        <div class="alert alert-danger col-lg-4 text-center">
          <%= flash[:notice] %>
        </div>
      </div>
      <% flash[:notice] = nil %>
    <% end %>

    <div class="form-group row">
        <div class="col-md-4"></div>
      <%= f.label :管理员用户名, class:"control-label col-md-4 text-white" %>
      <div class="col-md-4"></div>
      <div class="col-md-4"></div>
      <%= f.text_field :name, class: "form-control col-md-4", placeholder: "Input your admin username" %>
    </div>

    <div class="form-group row">
      <div class="col-md-4"></div>
      <%= f.label :密码, class:"control-label col-md-4 text-white" %>
      <div class="col-md-4"></div>
      <div class="col-md-4"></div>
      <%= f.password_field :password, class: "form-control col-md-4" %>
    </div>

    <div class="row">
      <div class="col-md-4"></div>
      <%= f.submit "登录", class: "btn-primary col-md-1" %>
      &nbsp;&nbsp;
      <%= link_to '返回主界面', root_path %>
    </div>

    <% end %>

</div>