<div class="container">

  <h1 align="center">
    学院列表
  </h1>

  <div class="row">
    <div class="col-md-5"></div>
    <%= link_to '添加新学院', new_college_path, class: "btn btn-primary col-md-2" %>
  </div><br>

<table class="table table-striped table-bordered">
  <tr>
    <th>学院名</th>
    <th>管理</th>
  </tr>

  <% @colleges.each do |college| %>
    <tr>
      <td><%= college.name %></td>
      <td><%= link_to '详情', college_path(college), class: "btn btn-primary" %>
      <%= link_to '编辑', edit_college_path(college), class: "btn btn-success" %>
      <%= link_to '删除', college_path(college),
                      method: :delete,
                      data: { confirm: '确认删除?' }, class: "btn btn-danger" %>
      </td>
    </tr>
  <% end %>
</table>

</div>
