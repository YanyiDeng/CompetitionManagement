<div class="container">
  <h1 align="center" class="text-white">
    学生登录
  </h1><br>

    <%= form_for :client_session, url: client_login_url, method: :post do |f| %>

    <% if flash[:notice] != nil %>
      <div class="row">
        <div class="col-md-5"></div>
      <div class="alert alert-danger col-lg-2 text-center">
        <%= flash[:notice] %>
      </div>
      </div>
        <% flash[:notice] = nil %>
      <% end %>

    <div class="form-group row">
      <div class="col-md-4"></div>
      <%= f.label :学号 , class:"control-label col-md-4 text-white" %>
      <div class="col-md-4"></div>
      <div class="col-md-4"></div>
      <%= f.text_field :student_id, class: "form-control col-md-4", placeholder: "Input your student ID" %>
    </div>
    <div class="form-group row">
      <div class="col-md-4"></div>
      <%= f.label :密码 , class:"control-label col-md-4 text-white" %>
      <div class="col-md-4"></div>
      <div class="col-md-4"></div>
      <%= f.password_field :password, class: "form-control col-md-4" %>
    </div>

    <div class="row">
      <div class="col-md-4"></div>
      <%= f.submit "登录", class: "btn-primary col-md-1" %>
      &nbsp;&nbsp;
      <%= link_to '返回主界面', root_path %>
    </div>

    <% end %>

</div>