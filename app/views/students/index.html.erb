<div class="container">

  <h1 align="center">
    学生列表
  </h1>

  <div class="row">
    <div class="col-md-5"></div>
    <%= link_to '添加新学生', new_student_path, class: "btn btn-primary col-md-2" %>
  </div><br>

<table class="table table-striped table-bordered">
  <tr>
    <th>学号</th>
    <th>姓名</th>
    <th>所在学院</th>
    <th>管理</th>
  </tr>

  <% @students.each do |student| %>
    <tr>
      <td><%= student.student_id %></td>
      <td><%= student.name %></td>
      <td><%= student.college.name %></td>
      <td><%= link_to '详情', student_path(student), class: "btn btn-primary" %>
      <%= link_to '编辑', edit_student_path(student), class: "btn btn-success" %>
      <%= link_to '删除', student_path(student),
                      method: :delete,
                      data: { confirm: '确认删除?' }, class: "btn btn-danger" %>
      </td>
    </tr>
  <% end %>
</table>

</div>
