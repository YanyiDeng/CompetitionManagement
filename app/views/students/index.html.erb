<h1>学生列表</h1>

<table>
  <tr>
    <th>学号</th>
    <th>姓名</th>
    <th>所在学院</th>
    <th colspan="3"></th>
  </tr>

  <% @students.each do |student| %>
    <tr>
      <td><%= student.student_id %></td>
      <td><%= student.name %></td>
      <td><%= student.college.name %></td>
      <td><%= link_to '详情', student_path(student) %></td>
      <td><%= link_to '编辑', edit_student_path(student) %></td>
      <td><%= link_to '删除', student_path(student),
                      method: :delete,
                      data: { confirm: '确认删除?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to '添加新学生', new_student_path %>
