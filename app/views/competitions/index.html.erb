<div class="container">

  <h1 align="center">
    比赛列表
  </h1>

<div class="row">
  <div class="col-md-5"></div>
  <%= link_to '添加新比赛', new_competition_path, class: "btn btn-primary col-md-2" %>
</div><br>

<table class="table table-striped table-bordered">
  <tr>
    <th>比赛名</th>
    <th>比赛届数</th>
    <th>比赛报名截止日期</th>
    <th>比赛结束日期</th>
    <th>管理</th>
  </tr>

  <% @competitions.each do |competition| %>
    <tr>
      <td><%= competition.name %></td>
      <td><%= competition.version %></td>
      <td><%= competition.deadline %></td>
      <td><%= competition.endtime %></td>
      <td><%= link_to '详情', competition_path(competition), class: "btn btn-primary" %>
      <%= link_to '编辑', edit_competition_path(competition), class: "btn btn-success" %>
      <%= link_to '删除', competition_path(competition),
                      method: :delete,
                      data: { confirm: '确认删除?' }, class: "btn btn-danger" %>
      </td>
    </tr>
  <% end %>
</table>

  <%= paginate @competitions %>

</div>
